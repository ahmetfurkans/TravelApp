<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fragment_home_h1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="fragment_home_tablayout_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.home_item" parent="">
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.top_pick_item" parent="">
        <item name="cornerFamilyTopLeft">@dimen/_6sdp</item>
        <item name="cornerFamilyTopRight">@dimen/_6sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.detail" parent="">
        <item name="cornerSizeBottomRight">@dimen/_27sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_27sdp</item>
    </style>

    <style name="fragment_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_39sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#292C3D</item>
        <item name="android:textSize">@dimen/_21sdp</item>
    </style>

    <style name="recyclerview_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#292C3D</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="search_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">#E0E2EB</item>
    </style>

</resources>